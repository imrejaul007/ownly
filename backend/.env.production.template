# PRODUCTION ENVIRONMENT TEMPLATE
# Copy this file to .env.production and replace all values with production credentials
# DO NOT commit .env.production to Git!

# Server Configuration
NODE_ENV=production
PORT=5001
API_URL=https://api.yourdomain.com

# Database Configuration (Use managed PostgreSQL service)
DB_DIALECT=postgres
DB_HOST=your-production-db-host.rds.amazonaws.com
DB_PORT=5432
DB_NAME=ownly_production
DB_USER=your_db_user
DB_PASSWORD=REPLACE_WITH_SECURE_PASSWORD_FROM_SECRETS_MANAGER

# JWT Configuration (CRITICAL - Generate new secure secret)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=REPLACE_WITH_CRYPTOGRAPHICALLY_SECURE_512_BIT_SECRET
JWT_EXPIRES_IN=7d

# Frontend URL (Production Domain)
FRONTEND_URL=https://yourdomain.com

# Redis (Required for production - use managed service)
REDIS_HOST=your-redis-cluster.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=REPLACE_WITH_REDIS_PASSWORD

# Stripe Configuration (REAL KEYS - Get from Stripe Dashboard)
STRIPE_SECRET_KEY=sk_live_REPLACE_WITH_REAL_LIVE_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_REPLACE_WITH_REAL_LIVE_KEY
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_WITH_REAL_WEBHOOK_SECRET

# SendGrid Configuration (Email Service)
SENDGRID_API_KEY=SG.REPLACE_WITH_REAL_API_KEY
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ERROR=logs/error.log
LOG_FILE_COMBINED=logs/combined.log

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://yourdomain.com

# AWS Configuration (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET_KEY
S3_BUCKET_NAME=ownly-production-uploads

# Monitoring & Error Tracking
SENTRY_DSN=REPLACE_WITH_SENTRY_DSN
DATADOG_API_KEY=REPLACE_WITH_DATADOG_KEY

# KYC/AML Service (Required for compliance)
SUMSUB_API_KEY=REPLACE_WITH_SUMSUB_API_KEY
SUMSUB_SECRET_KEY=REPLACE_WITH_SUMSUB_SECRET

# Plaid (For bank account verification)
PLAID_CLIENT_ID=REPLACE_WITH_PLAID_CLIENT_ID
PLAID_SECRET=REPLACE_WITH_PLAID_SECRET
PLAID_ENV=production
